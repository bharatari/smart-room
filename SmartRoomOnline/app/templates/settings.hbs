{{sidebar-left goToIndex="goToIndex"}}
{{modal-dialog body=modalBody title=modalTitle displayModal=modalDisplay}}
<div class="app-container bg-dark col-md-10">
	<form>
		<div class="form-inline form-margin">
			<div class="form-group">
				<label class="white label-margin">Max Temperature</label>
				{{input type="number" class="form-control form-light" placeholder="In Celcius" value=temperatureMax.value}}
				<span class="white">&deg;C</span>
			</div>
		</div>
		
		<div class="form-inline form-margin">
			<div class="form-group">
				<label class="white label-margin">Min Temperature</label>
				{{input type="number" class="form-control form-light" placeholder="In Celcius" value=temperatureMin.value}}
				<span class="white">&deg;C</span>
			</div>
		</div>
		
		<div class="form-inline form-margin">
			<div class="form-group">
				<label class="white label-margin">Max Humidity</label>
				{{input type="number" class="form-control form-light" value=humidityMax.value}}
				<span class="white">%</span>
			</div>
		</div>
		
		<div class="form-inline form-margin">
			<div class="form-group">
				<label class="white label-margin">Min Humidity</label>
				{{input type="number" class="form-control form-light" value=humidityMin.value}}
				<span class="white">%</span>
			</div>
		</div>
		
		<div class="checkbox">
			<label class="white">
				{{input type="checkbox" checked=displayFahrenheit.value}} Display in Fahrenheit
			</label>
		</div>
		
		<button class="btn btn-light" {{action 'update'}}>UPDATE</button>
	</form>
</div>
